    <style>

        .heading {
            background-color: #00F7C1;
            color: #3417C6;
            font-size: 2.0rem;
            font-weight: bold;
            text-align: center;
            margin: 10px auto;
            border-radius: 10px;
            box-shadow: 0 0 15px green;
            padding: 12px 10px;
        }
        input[type='number']::-webkit-inner-spin-button, input[type='number']::-webkit-inner-outer-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
  </head>
  <body>

    <%- include ('../layout/header') %>

    <main class="container" style="min-height: 80vh;">
    
        
        <div class="heading">
            Count Calculator
        </div>

        <div class="main">
            <div class="row">
                <div class="col-6">
                    <form>
                        <div class="mb-3">
                          <label for="weight" class="form-label">Weight</label>
                          <input type="number" class="form-control" id="weight">
                          <label for="weightSys" class="form-label">Weight Unit</label>
                          <select name="weightSys" class="form-control" id="weightSys">
                            <option value="kg">KG</option>
                            <option value="lb">lb</option>
                            <option value="gm">gm</option>
                          </select>
                        </div>

                        <div class="mb-3">
                            <label for="length" class="form-label">Length</label>
                            <input type="number" class="form-control" id="length">
                            <label for="lengthSys" class="form-label">Length Unit</label>
                            <select name="lengthSys" class="form-control" id="lengthSys">
                              <option value="m">m</option>
                              <option value="yd">yd</option>
                              <option value="ft">feet</option>
                              <option value="inch">inches</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary form-control">Calculate</button>
                      </form>
                </div>

                <div class="col-6">
                    <div class="output">
                        
                    </div>
                </div>
            </div>
        </div>
    </main>
 
    <%- include ('../layout/footer') %>
