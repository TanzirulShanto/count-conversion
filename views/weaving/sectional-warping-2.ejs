<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

    <title>Count Converter</title>
  </head>
  <body>

    <%- include ('../layout/header') %>

    <main>
        <div class="container p-3">
            <h2 align="center">Calculation of Sectional Warping</h2>
        </div>

        <div class="container p-3">
            <form action="/weaving/sectional-warping-2/" method="POST">
              <div class="row">
                <div class="col-lg-6 p-5">
                  <% for(let stripe of stripes) { %>

                    <div class="mb-3">
                        <label class="form-label" for=<%= stripe%>><%= stripe%> Width (inches)</label>
                        <input type="number" class="form-control" step="0.01" name=<%= stripe%> >
                    </div>
                  <% } %>
                  <div class="d-none mb-3">
                    <label class="form-label" for="stripeNumber">Number of Stripes in a Reapeat</label>
                    <input class="form-control" type="number" step="0.01" id="stripeNumber" name="stripeNumber" value=<%= total %>>
                  </div>
                </div>
                <div class="col-lg-6 p-5">
                    <div class="mb-3">
                      <label class="form-label" for="warpCount">Warp Count</label>
                      <input class="form-control" type="number" step="0.01" id="warpCount" name="warpCount">
                    </div>
                    <div class="mb-3">
                      <label class="form-label" for="weftCount">Weft Count</label>
                      <input class="form-control" type="number" step="0.01" id="weftCount" name="weftCount">
                    </div>
                    <div class="mb-3">
                      <label class="form-label" for="epi">EPI</label>
                      <input class="form-control" type="number" step="0.01" id="epi" name="epi">
                    </div>
                  <div class="mb-3">
                    <label class="form-label" for="ppi">PPI</label>
                    <input class="form-control" type="number" step="0.01" id="ppi" name="ppi">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="fabricWidth">Fabric Width (inches)</label>
                    <input class="form-control" type="number" step="0.01" id="fabricWidth" name="fabricWidth">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="fabricLength">Fabric Length (m)</label>
                    <input class="form-control" type="number" step="0.01" id="fabricLength" name="fabricLength">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="drumCapacity">Drum Capacity (m)</label>
                    <input class="form-control" type="number" step="0.01" id="drumCapacity" name="drumCapacity">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="prebeamCapacity">Carpacity of Pre-beam (m)</label>
                    <input class="form-control" type="number" step="0.01" id="prebeamCapacity" name="prebeamCapacity">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="creelCapacity">Creel Capacity</label>
                    <input class="form-control" type="number" step="0.01" id="creelCapacity" name="creelCapacity">
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="wastePercentage">Waste Percentage (%)</label>
                    <input class="form-control" type="number" value="17" step="0.01" id="wastePercentage" name="wastePercentage">
                  </div>
                </div>
              </div>

              <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary d-blok m-auto">Calculate</button>
              </div>
            </form>
        </div>
    </main>
    



    <%- include ('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>