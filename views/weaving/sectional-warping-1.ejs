<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Sectional Warping</title>
    <style>
      body{
          background-color: #f9f9f9;
      }
      main{
          min-height: 30pc;
      }
      button{
          min-width: 50px;
      }

      a:link, a:visited {
          color: white;
          padding: 5px;
          text-align: center;
          display: inline-block;
        }
      a:hover{
          color: yellow;
      }

      .info{
          background-color: lightblue;
          border-left: solid rgb(80, 80, 235) 5px;
          color: black;
          padding: 10px;
      }
      .info-warning{
          background-color: #f1f79e;
          border-left: solid rgb(255, 238, 0) 5px;
          margin-top: 50px;
          color: red;
          padding: 10px;
      }

      nav{
          background-color: magenta;
      }
      nav:a{
          color: black;
      }
      .footer-txt{
          color: black;
      }
    </style>
  </head>
  <body>

    <%- include ('../layout/header') %>

    <main style="min-height: 30pc;">
        <div class="container p-3">
            <h2 align="center">Sectional Warping</h2>
        </div>

        <div class="container p-3">
          <form action="/weaving/sectional-warping-1" method="POST">
              <div class="mb-3">
                  <label class="form-label" for="stripeNumber">Enter the Number of Stripe in a Repeat</label>
                  <input class="form-control" type="number" min="1" max="20" name="stripeNumber" id="stripeNumber" required>
              </div>

              <button type="submit" class="btn btn-primary">Proceed</button>
          </form>
        </div>
    </main>
    



    <%- include ('../layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>